<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="0.1" android:layout_gravity="bottom">
		<ImageView android:id="@+id/ImageView01" android:layout_width="fill_parent" android:background="@drawable/pokersplash" android:layout_height="fill_parent"></ImageView>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_height="fill_parent" android:layout_weight="0.9" android:layout_width="wrap_content" android:layout_gravity="center">
		<ProgressBar android:id="@+id/ProgressBar01" android:layout_height="wrap_content" android:visibility="visible" android:layout_width="wrap_content" android:layout_gravity="right" android:layout_weight="0.5"></ProgressBar>
		<TextView android:id="@+id/TextView01" android:layout_height="wrap_content" android:text="@string/loading" android:layout_weight="0.5" android:layout_width="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="4px"></TextView>
	</LinearLayout>
</LinearLayout>
